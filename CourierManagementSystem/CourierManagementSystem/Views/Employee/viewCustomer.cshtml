@model CourierManagementSystem.Models.Customer
@{
    var hide = "hidden";
    ViewBag.Title = "viewCustomer";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}
<div class="d-flex justify-content-center align-items-center container ">
    <div class="col-md-8 box">
        <h1 class="text-white bg-dark text-center">
            Customer's Information
        </h1>
        <table class="table">

            <tbody>
                <tr>

                    <td class="tdattribute">Name</td>
                    <td>:</td>
                    <td>@Model.Name</td>

                </tr>

                <tr>

                    <td class="tdattribute">Email</td>
                    <td>:</td>
                    <td>@Model.User.EmailAddress</td>

                </tr>

                <tr>

                    <td class="tdattribute">Phone Number</td>
                    <td>:</td>
                    <td>@Model.Contact</td>

                </tr>
                <tr>
                    <td class="tdattribute">Address</td>
                    <td>:</td>
                    <td>@Model.Address</td>
                </tr>
            </tbody>
        </table>
            <div class="form-group">
                <a href="/employee/ViewCustomers/@Model.Id" class="btn btn-warning">Cancel</a>
                <a href="/employee/VerifyCustomer/@Model.Id" class="btn btn-success" @if (Model.User.Status != 0) { @hide }>Verify User</a>
                <a href="/employee/UnBlockCustomer/@Model.Id" class="btn btn-success" @if (Model.User.Status != 2) { @hide }>Unblock</a>
                <a href="/employee/BlockCustomer/@Model.Id" class="btn btn-danger" @if (Model.User.Status == 2 ) { @hide }>Block</a>
            </div>
    </div>
</div>

