@model CourierManagementSystem.Models.Branch
@{
    ViewBag.Title = "ViewBranch";
    Layout = "~/Views/Shared/_admin.cshtml";
}

<div class="d-flex justify-content-center align-items-center container ">
    <div class="col-md-8 box">
        <h1 class="text-white bg-dark text-center">
            Branch's Information
        </h1>
        <form action="" method="post">
            <div class="form-group">
                <label>Branch Name:</label>
                <input type="text" class="form-control" name="Branch_name" value="@Model.Branch_Name">
            </div>
            <div class="form-group">
                <label>Address:</label>
                <input type="text" class="form-control" name="address" value="@Model.Address">
            </div>
            <div class="form-group">
                <label class="text-white bg-dark text-center">Update Branch?</label>
            </div>
            <div class="form-group">
                <a href="/admin/AllBranch" class="btn btn-danger">Cancel</a>
                <input type="submit" class="btn btn-success" value="Update" name="update" id="">
            </div>
        </form>
    </div>
</div>

