@model CourierManagementSystem.Models.ViewModels.EmployeeViewModel
@{
    ViewBag.Title = "Create New Worker";
    Layout = "~/Views/Shared/_admin.cshtml";
}

<div class="patientprofile">
    <div class="d-flex justify-content-center align-items-center container ">
        <div class="col-md-8 donor">
            <h1 class="text-white bg-dark text-center">
                Create New Worker
            </h1>
            <form action="" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label>UserName:</label>
                    <input type="text" class="form-control" name="username" value="">
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>Password:</label>
                    <input type="password" class="form-control" name="password" value="" required>
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>Email:</label>
                    <input type="email" class="form-control" name="emailAddress" value="" required>
                    @Html.ValidationMessageFor(model => model.EmailAddress, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>Designation:</label>
                    <select style="border-radius: 5px;" class="form-control" name="designation" value="">
                        <option selected hidden>Select a Designation</option>
                        <option value="0">Manager</option>
                        <option value="1">Worker</option>
                        <option value="2">Delivery Boy</option>
                        <option value="3">Driver</option>
                    </select>
                    @Html.ValidationMessageFor(model => model.Designation, "", new { @class = "text-danger" })

                </div>
                <div class="form-group">
                    <label>Branch:</label>

                    <select class="form-control" name="Branch_id">
                        <option selected hidden value="">Select Branch</option>
                        @foreach (var item in ViewData["branches"] as List<CourierManagementSystem.Models.Branch>)
                        {
                            <option value="@item.Id">@item.Branch_Name</option>
                        }

                    </select>
                    @Html.ValidationMessageFor(model => model.Branch_id, "", new { @class = "text-danger" })<br>
                    <span style="color:red;"></span>
                </div>
                <div class="form-group">
                    <label>Salary:</label>
                    <input type="text" class="form-control" name="salary" value="" required>
                    @Html.ValidationMessageFor(model => model.Salary, "", new { @class = "text-danger" })
                    <span style="color:red;"></span>
                </div>
                <div class="form-group">
                    <label for="image">Picture</label>
                    <input type="text" name="image" class="form-control" id="image">
                    @Html.ValidationMessageFor(model => model.image, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" name="newemployee" value="Add New Employee">
                </div>
            </form>
        </div>
    </div>
</div>


